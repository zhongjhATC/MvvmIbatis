<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="windowNoTitle">true</item> <!-- 无标题 -->
        <item name="windowActionBar">false</item> <!-- 无ActionBar -->
        <item name="android:windowFullscreen">true</item> <!-- 全屏即无通知栏 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 是否有遮盖 -->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.MviDemo" parent="@style/Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>